<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light"
    tools:context=".HomeActivity">

    <!-- 顶部Tab切换栏 -->
    <HorizontalScrollView
        android:id="@+id/tabScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/tabWeather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天气定位"
                android:textSize="16sp"
                android:textColor="@color/primary_blue_gray"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tabFollow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tabRecommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tabCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="?attr/selectableItemBackground" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Fragment容器 -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tabScrollView"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingHorizontal="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/tabHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animHome"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:lottie_rawRes="@raw/home"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

            <TextView
                android:id="@+id/tvTabHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="12sp"
                android:textColor="@color/primary_blue_gray"
                android:paddingTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabAgent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animAgent"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:lottie_rawRes="@raw/app"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

            <TextView
                android:id="@+id/tvTabAgent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的智能体"
                android:textSize="12sp"
                android:textColor="@color/text_tertiary"
                android:paddingTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabWardrobe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animWardrobe"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:lottie_rawRes="@raw/planet"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

            <TextView
                android:id="@+id/tvTabWardrobe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的衣橱"
                android:textSize="12sp"
                android:textColor="@color/text_tertiary"
                android:paddingTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animProfile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:lottie_rawRes="@raw/profile"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

            <TextView
                android:id="@+id/tvTabProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@color/text_tertiary"
                android:paddingTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


